<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_click"
              android:orientation="vertical">

    <View
        android:id="@+id/line_up"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:textColor="@color/font_main_color"
            android:textSize="@dimen/font_big"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font_main_color"
            android:textSize="@dimen/font_small"/>

        <ImageView
            android:id="@+id/iv_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>

    <View
        android:id="@+id/line_down"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gap_color"/>
</LinearLayout>